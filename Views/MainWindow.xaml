<Window x:Class="TypingCombo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TypingCombo.Views"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    <Grid>
        <TextBlock x:Name="ApmTextBlock" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="24" Width="210" Foreground="White" Background="Black" Margin="0,180,0,0"/>
        <!-- this button will remove-->
        <CheckBox x:Name="ToggleRankWindow" Content="Toggle Rank Window"
                  Checked="ToggleRankWindow_Checked"
                  Unchecked="ToggleRankWindow_Unchecked" Background="#FFFFEFEF" HorizontalAlignment="Center" VerticalAlignment="Top" Height="15" Width="150" Margin="0,230,0,0"/>

    </Grid>
</Window>
